{
  "name": "Nova",
  "version": "0.0.1",
  "images": [
    {
      "variable": "image",
      "label": "Header image",
      "description": "Transparent background recommended"
    },
    {
      "variable": "background_image",
      "label": "Background Image",
      "description": "Adds a repeating background image"
    }
  ],
  "fonts": [
    {
      "variable": "header_font",
      "label": "Header Font",
      "default": "Inconsolata"
    },
    {
      "variable": "text_font",
      "label": "Text Font",
      "default": "Inconsolata"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "variable": "background_secondary_color",
      "label": "Background Secondary",
      "default": "#efeff4"
    },    
    {
      "variable": "text_color",
      "label": "Text",
      "default": "#111111"
    },
    {
      "variable": "text_secondary_color",
      "label": "Text Secondary",
      "default": "#8e8e93"
    },    
    {
      "variable": "link_color",
      "label": "Links",
      "default": "#4CD964"
    }, 
    {
      "variable": "hover_color",
      "label": "Link's Hover",
      "default": "#0fce2f"
    },
    {
      "variable": "error_color",
      "label": "Errors",
      "default": "#e36aa6"
    },    
    {
      "variable": "border_color",
      "label": "Borders",
      "default": "#dcdce0"
    }            
  ],
  "options": [
    {
      "variable": "welcome_text",
      "label": "Welcome text",
      "type": "text",
      "description": "Welcome text on the Home page"
    },  
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "1..100",
      "default": 3,
      "description": "The number of products shown on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "newest",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 6,
      "description": "The number of products shown at a time on the Products page"
    },
		{
      "variable": "product_list_layout",
      "label": "Product List Layout",
      "type": "select",
      "options": [["Stacked", "stacked"], ["Grid", "masonry"]],
      "default": "stacked",
      "description": "The arrangement of your products on the Products pages"
    },    
    {
      "variable": "show_inventory_bars",
      "label": "Show inventory bars",
      "type": "boolean",
      "default": true,
      "description": "Shows a product's inventory amounts (when using inventory tracking)",
      "requires": "inventory"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": false,
      "description": "Shows the product search area"
    },
  	{
      "variable": "share_buttons",
      "label": "Show social buttons",
      "type": "boolean",
      "default": true,
      "description": "Adds Facebook, Twitter, and Pinterest buttons to Product pages"
    },
    {
      "variable": "twitter_link",
      "label": "Twitter Link",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_link",
      "label": "Facebook Link",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel"
    },
    {
      "variable": "tumblr_link",
      "label": "Tumblr Link",
      "type": "text",
      "description": "Ex: http://tumblr.com/bigcartel"
    }    
  ]
}
